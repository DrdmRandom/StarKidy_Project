<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Scheduler_for_parent"
    android:background="@android:color/white"
    >

    <!-- Header -->
    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_rounded_parent"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="back_button"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="timetable"
            android:fontFamily="@font/roboto_medium"
            android:textSize="21sp"
            android:textAppearance="?attr/textAppearanceHeadline6" />
    </LinearLayout>
    <!-- END OF Header -->

    <!-- Tabs Weeks -->
    <RelativeLayout
        android:id="@+id/weekDaysLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        app:layout_constraintTop_toBottomOf="@+id/Header">

        <RadioGroup
            android:id="@+id/weekDaysGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <RadioButton
                android:id="@+id/mondayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/weekday_selector"
                android:button="@null"
                android:fontFamily="@font/roboto_medium"
                android:padding="8dp"
                android:text="MON"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/tuesdayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/weekday_selector"
                android:button="@null"
                android:fontFamily="@font/roboto_medium"
                android:padding="8dp"
                android:text="TUE"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/wednesdayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/weekday_selector"
                android:button="@null"
                android:fontFamily="@font/roboto_medium"
                android:padding="8dp"
                android:text="WED"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/thursdayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/weekday_selector"
                android:button="@null"
                android:fontFamily="@font/roboto_medium"
                android:padding="8dp"
                android:text="THU"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/fridayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/weekday_selector"
                android:button="@null"
                android:fontFamily="@font/roboto_medium"
                android:padding="8dp"
                android:text="FRI"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/saturdayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/weekday_selector"
                android:button="@null"
                android:fontFamily="@font/roboto_medium"
                android:padding="8dp"
                android:text="SAT"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>
    </RelativeLayout>
    <!-- END OF Tabs Weeks -->

    <!-- START OF RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scheduleRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/weekDaysLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/schedule_card" />
    <!-- END OF RecyclerView -->

</androidx.constraintlayout.widget.ConstraintLayout>
