<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">
`

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon_announcement"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/megaphone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/title_announcement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:fontFamily="@font/open_sans_bold"
                android:text="Title Announcement"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/content_announcement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:fontFamily="@font/roboto"
                android:text="The Announcements Content will be Here, To announce something to the user " />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>