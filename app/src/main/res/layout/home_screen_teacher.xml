<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_screen_parent"
    android:background="@android:color/white">

    <!-- Profile Header -->
    <LinearLayout
        android:id="@+id/container_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_rounded_teacher"
        android:orientation="horizontal"
        android:paddingVertical="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/oval_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Halo Person!"
                android:textColor="#000000"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@id/profile_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/roboto"
                android:text="Let's start Learning Today"
                android:textColor="#000000"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toBottomOf="@+id/profile_name" />
        </LinearLayout>

    </LinearLayout>
    <!-- End Profile Header-->

    <!-- Title Today Agenda -->
    <TextView
        android:id="@+id/Title_Agenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today Agenda"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_profile"/>

    <!-- Today Agenda Button card-view -->
    <LinearLayout
        android:id="@+id/Today_Agenda_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Title_Agenda">

        <!-- CardView Schedule -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Scheduler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp">

            <!-- Image for schedule Cardview -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_schedule"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="#25B201"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@+id/text_schedule"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/schedule_image"
                    android:contentDescription="schedule Image" />

            </androidx.cardview.widget.CardView>
            <!-- END Image for schedule Cardview -->

            <!-- TextView below the CardView -->
            <TextView
                android:id="@+id/text_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="14sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/card_schedule"
                app:layout_constraintEnd_toEndOf="@+id/card_schedule"
                app:layout_constraintTop_toBottomOf="@+id/card_schedule" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- END OF CardView Schedule -->

        <!-- Report Book CardView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/report_book_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp">

            <!-- Image for Report Book CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_report_book"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="#87ACFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toTopOf="@+id/text_report_book"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/report_book_image"
                    android:contentDescription="Report Book Image" />
            </androidx.cardview.widget.CardView>

            <!-- TextView below the CardView -->
            <TextView
                android:id="@+id/text_report_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Book"
                android:textSize="14sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/card_report_book"
                app:layout_constraintEnd_toEndOf="@+id/card_report_book"
                app:layout_constraintTop_toBottomOf="@+id/card_report_book" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- END OF Report Book CardView -->

        <!-- Attendance CardView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/attendance_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp">

            <!-- Image for Attendance CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_attendance"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="#965EFC"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toTopOf="@+id/text_attendance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/attendace_image"
                    android:contentDescription="Attendance Image" />
            </androidx.cardview.widget.CardView>

            <!-- TextView below the CardView -->
            <TextView
                android:id="@+id/text_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textSize="14sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/card_attendance"
                app:layout_constraintEnd_toEndOf="@+id/card_attendance"
                app:layout_constraintTop_toBottomOf="@+id/card_attendance" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- END OF Attendance CardView -->
    </LinearLayout>
    <!-- End of Today Agenda -->

    <!-- Title Today Agenda -->
    <TextView
        android:id="@+id/Title_Announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Announcements"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Today_Agenda_container"/>

    <!-- Announcements Board -->
    <androidx.cardview.widget.CardView
        android:id="@+id/announcements_board"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/purple_teacher"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/Title_Announcement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Empty Announcement Image and Text -->
        <RelativeLayout
            android:id="@+id/empty_announcement_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/image_empty_announcements"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:alpha="0.6"
                android:src="@drawable/empty_message"
                android:contentDescription="empty_announcements Foto"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/text_empty_announcements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Announcements right now"
                android:fontFamily="@font/open_sans_bold"
                android:alpha="0.6"
                android:layout_below="@id/image_empty_announcements"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#000000" />

        </RelativeLayout>

        <!-- Container for the announcement cards -->
        <LinearLayout
            android:id="@+id/announcements_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"> <!-- Initially hidden, will contain dynamic announcement cards -->
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!-- END OF Announcements Board -->

    <!-- Bottom Navigation Bar -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation" />

        <!-- BottomNavigationView -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/purple_teacher"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:menu="@menu/bottom_navigation_menu" />

    </RelativeLayout>
    <!-- END OF Bottom Navigation Bar -->

</androidx.constraintlayout.widget.ConstraintLayout>
