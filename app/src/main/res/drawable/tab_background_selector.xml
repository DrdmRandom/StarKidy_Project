<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="16dp" />
            <solid android:color="@color/yellow_parent" /> <!-- Color for selected tab -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="16dp" />
            <solid android:color="@android:color/transparent" /> <!-- Transparent for unselected tabs -->
        </shape>
    </item>
</selector>
