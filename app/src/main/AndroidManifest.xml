<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.starkidyapps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StarKidyApps"
        tools:targetApi="31" >

        <!-- SplashScreen sebagai entry point dari aplikasi -->
        <activity
            android:name=".Load_up.SplashScreen"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Log In Parent -->
        <activity
            android:name=".Load_up.SignIn_Parent"
            android:exported="true"
            android:label="@string/app_name"/>

        <!-- Log In Teacher -->
        <activity
            android:name=".Load_up.SignIn_Employee"
            android:exported="true"
            android:label="@string/app_name"/>

        <!-- Sing up -->
        <activity
            android:name=".Load_up.SignUp"
            android:exported="true" />

        <!-- main screen -->
        <activity
            android:name=".Main.MainScrean"
            android:exported="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>