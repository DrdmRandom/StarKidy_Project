<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StarKidyApps"
        tools:targetApi="31" >

        <!-- SplashScreen sebagai entry point dari aplikasi -->
        <activity
            android:name=".Load_up.SplashScreen"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Load_up.SignIn_Parent"
            android:exported="true"
            android:label="@string/app_name"/>

        <activity
            android:name=".Load_up.SignIn_Employee"
            android:exported="true"
            android:label="@string/app_name"/>

        <activity
            android:name=".Load_up.Sign_up"
            android:exported="true"
            android:label="@string/app_name"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>